---
import Layout from '../../layouts/Layout.astro';
import { books } from '../../data/books.js';
import InteractiveMap from '../../components/InteractiveMap.jsx';
import Quiz from '../../components/Quiz.jsx'; // <--- AQUÍ ESTÁ LA IMPORTACIÓN
import Timeline from '../../components/Timeline.jsx';
import LeadMagnet from '../../components/LeadMagnet.jsx';

export function getStaticPaths() {
  return books.map(book => ({
    params: { slug: book.slug },
    props: { book },
  }));
}

const { book } = Astro.props;

// Filtrar otros libros para la sección de "Más de la Saga"
const otherBooks = books.filter(b => b.id !== book.id);
---

<Layout title={`${book.title} | Paulina López`}>
    
    <nav class="fixed w-full z-50 bg-midnight/90 backdrop-blur-md border-b border-white/5 py-2">
        <div class="container mx-auto px-6 flex justify-between items-center">
            <a href="/" class="flex items-center gap-2 group">
                <span class="text-gold text-xl">←</span>
                <span class="font-gothic text-white group-hover:text-gold transition">VOLVER AL INICIO</span>
            </a>
            {book.status === 'DISPONIBLE' && (
                <a href={book.amazonLink} target="_blank" class="bg-blood text-white px-6 py-2 text-sm font-bold rounded-full hover:bg-red-700 transition">
                    COMPRAR
                </a>
            )}
        </div>
    </nav>

    <header class="relative min-h-[80vh] flex items-center justify-center overflow-hidden pt-20">
        <div class="absolute inset-0 bg-midnight"></div>
        <div class="absolute inset-0 bg-[radial-gradient(circle_at_center,_var(--tw-gradient-stops))] from-gray-800/20 via-midnight to-midnight"></div>

        <div class="relative z-10 container mx-auto px-6 grid md:grid-cols-2 gap-12 items-center">
            <div class="flex justify-center md:justify-end order-2 md:order-1">
                <img 
                    src={book.cover} 
                    alt={`Portada de ${book.title}`} 
                    class="w-64 md:w-80 shadow-[0_0_50px_rgba(255,255,255,0.1)] rounded-sm transform hover:scale-105 transition duration-500"
                    transition:name={`cover-${book.slug}`} 
                />
            </div>

            <div class="text-center md:text-left order-1 md:order-2">
                <h2 class="text-gold tracking-[0.3em] text-sm mb-4 uppercase">{book.subtitle}</h2>
                <h1 class="font-gothic text-5xl md:text-7xl text-white mb-6 leading-tight">{book.title}</h1>
                <p class="text-gray-400 text-lg mb-8 leading-relaxed max-w-lg mx-auto md:mx-0">
                    {book.description}
                </p>

                <div class="flex flex-col md:flex-row gap-4 justify-center md:justify-start items-center">
                    {book.leadMagnet && (
                        <LeadMagnet client:load pdfUrl={book.leadMagnet} />
                    )}
                    
                    {book.status === 'DISPONIBLE' ? (
                        <a href={book.amazonLink} target="_blank" class="px-8 py-4 bg-blood text-white font-bold rounded-full hover:bg-red-700 transition shadow-[0_0_20px_rgba(168,0,0,0.4)]">
                            ADQUIRIR EN AMAZON
                        </a>
                    ) : (
                        <span class="px-8 py-4 border border-white/20 text-gray-500 rounded-full cursor-not-allowed">
                            PRÓXIMAMENTE
                        </span>
                    )}
                </div>
            </div>
        </div>
    </header>

    <section class="py-24 bg-black border-t border-white/10">
        <div class="container mx-auto px-6">
            <div class="text-center mb-16">
                <h2 class="font-gothic text-3xl text-white mb-2">Más Libros de la Saga</h2>
                <p class="text-gray-500 text-sm tracking-widest uppercase">Completa tu colección</p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 justify-center">
                {otherBooks.map((other) => (
                    <a href={`/libros/${other.slug}`} class="group block bg-white/5 border border-white/10 p-6 rounded-xl hover:bg-white/10 transition duration-300">
                        <div class="flex items-center gap-6">
                            <img src={other.cover} alt={other.title} class="w-24 rounded shadow-lg group-hover:scale-105 transition duration-300" />
                            <div>
                                <h3 class="font-gothic text-xl text-white group-hover:text-gold transition">{other.title}</h3>
                                <p class="text-xs text-gray-400 mt-2 mb-3">{other.status}</p>
                                <span class="text-sm text-gold underline decoration-gold/30 underline-offset-4 group-hover:text-white transition">Ver Detalles →</span>
                            </div>
                        </div>
                    </a>
                ))}
            </div>
        </div>
    </section>

    {book.hasMap && (
        <section class="py-24 bg-gradient-to-b from-midnight to-black border-t border-white/5 relative">
            <div class="container mx-auto px-6 text-center relative z-10">
                <h2 class="font-gothic text-3xl mb-6 text-white">Escenarios de {book.title}</h2>
                <div class="max-w-5xl mx-auto">
                    <InteractiveMap client:visible locations={book.mapLocations} mapImage={book.mapImage} />
                </div>
            </div>
        </section>
    )}

    {book.hasTimeline && (
        <section class="py-24 bg-midnight relative border-t border-white/5">
            <div class="container mx-auto px-6">
                <div class="text-center mb-12">
                    <h2 class="font-gothic text-3xl text-white mb-4">Cronología de Eventos</h2>
                </div>
                <Timeline client:visible events={book.timelineEvents} />
            </div>
        </section>
    )}

    {book.hasQuiz && (
        <section class="py-24 bg-midnight relative overflow-hidden border-t border-white/5">
            <div class="container mx-auto px-6 relative z-10">
                <div class="text-center mb-12">
                    <h2 class="font-gothic text-3xl text-white mb-4">Prueba de Aptitud</h2>
                </div>
                <Quiz client:visible questions={book.quizQuestions} />
            </div>
        </section>
    )}

    <footer class="bg-black py-12 text-center text-gray-600 text-xs border-t border-white/10">
        &copy; {new Date().getFullYear()} Paulina López. 
        <a href="/" class="text-gold hover:underline ml-2">Volver al Inicio</a>
    </footer>

</Layout>