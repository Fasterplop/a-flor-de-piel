---
// 1. Importamos el tipo ImageMetadata para solucionar el error de TypeScript
import type { ImageMetadata } from 'astro';

interface Props {
	title: string;
    description?: string;
    // 2. Permitimos que 'image' sea texto O un objeto de imagen importada
    image?: string | ImageMetadata;
}

const { 
    title, 
    description = "Sitio oficial de Paulina Lopez, escritora de fantasía urbana y desarrollo personal. Descubre la saga 'A Flor de Piel' y únete al newsletter.",
    // Imagen por defecto (asegúrate de que esta imagen exista en public/images/paulina2.jpg)
    image = "/images/paulina2.jpg" 
} = Astro.props;

// 3. LÓGICA DE EXTRACCIÓN:
// Si 'image' es un objeto (porque viene de un import), extraemos su .src. Si es texto, lo usamos tal cual.
const imageURL = typeof image === 'object' ? image.src : image;

// Crear URLs absolutas para SEO (Canonical y OG Image)
// Nota: Astro.site debe estar configurado en astro.config.mjs, si no, usa un fallback seguro
const siteURL = Astro.site ? Astro.site : Astro.url.origin;
const canonicalURL = new URL(Astro.url.pathname, siteURL);
const canonicalImageURL = new URL(imageURL, Astro.url); // Esto genera la URL completa para compartir
